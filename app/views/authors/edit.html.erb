<h2>Edit Author</h2>

<%= form_tag author_path(@author), method: "patch" do %>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors</h2>
      <ul>
        <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <%end%>
      </ul>
    </div>
  <%end%>
  <div class="field" <%= "field_with_errors" if @author.errors[:name].any? %>>
    <%= label_tag "name", @author.name if @author.errors[:name].any? %>
    <%= text_field_tag "name" %>
  </div>

  <div class="field" <%= "field_with_errors" if @author.errors[:email].any? %>>
    <%= label_tag "email", @author.email if @author.errors[:email].any? %>
    <%= text_field_tag "email" %>
  </div>

  <div class="field" <%= "field_with_errors" if @author.errors[:phone_number].any? %>>
    <%= label_tag "phone_number", @author.phone_number if @author.errors[:phone_number].any?  %>
    <%= text_field_tag "phone_number" %>
  </div>

  <%= submit_tag "Update" %>
<% end %>
