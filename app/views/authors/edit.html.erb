<h2>Editing "<%= @author.name %>"</h2>

<% if @author.errors.any? %>
  <div id="error_explanation">
    <h2> Errors Found: </h2>
      <ol>
        <% @author.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ol>
  </div>
<% end %>

<%= form_tag author_path(@author), method: "patch" do %>

  <% if @author.errors[:name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "name", "Name" %>
      <%= text_field_tag "name", @author.name %>
    </div>

  <% if @author.errors[:email].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "email", "Email" %>
      <%= text_field_tag "email", @author.email %>
    </div>

  <% if @author.errors[:phone_number].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
      <%= label_tag "phone_number", "Phone Number" %>
      <br />
      <%= text_field_tag "phone_number", @author.phone_number %>
    </div>

  <%= submit_tag "Update" %>
<% end %>

