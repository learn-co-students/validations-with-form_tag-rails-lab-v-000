<h2>Edit an Author</h2>
<%= form_tag authors_path, method: "patch" do %>
  <div class="field">
    <%= label_tag "name", "Name" @author.name %>
    <%= text_field_tag "name" %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" @author.email %>
    <%= text_field_tag "email" %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" @author.phone_number %>
    <%= text_field_tag "phone_number" %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
