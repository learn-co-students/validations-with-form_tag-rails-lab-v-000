<h1>Edit Author</h1>
<%= form_for(@author) do |f| %>
	<% if @author.errors.any? %>
		<div id="error_explanation">
			<h2>There are some errors:</h2>
			<ul>
				<% @author.errors.full_messages.each do | m | %>
					<li><%= m %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field<%= '_with_errors' if @author.errors[:name].any? %>">
		<%= label_tag "name", "Name" %>
		<%= text_field_tag "name", @author.name %>
	</div>

	<div class="field<%= '_with_errors' if @author.errors[:email].any? %>">
		<%= label_tag "email", "Email" %>
		<%= text_field_tag "email", @author.email %>
	</div>

	<div class="field<%= '_with_errors' if @author.errors[:phone_number].any? %>">
		<%= label_tag "phone_number", "Phone number" %>
		<%= text_field_tag "phone_number", @author.phone_number %>
	</div>

	<%= submit_tag "Edit Author" %>
<% end %>