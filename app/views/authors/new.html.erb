<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>

  <!-- Show the errors! -->
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h3>There were some errors.</h3>
      <ul>
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- End of Error Messages -->

  <!-- Start form tags -->
  <div class="field<%= '_with_errors' if !@author.errors[:name].empty? %>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field<%= '_with_errors' if !@author.errors[:email].empty? %>">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field<%= '_with_errors' if !@author.errors[:phone_number].empty? %>">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Create" %>
<% end %> <!-- End of Form -->
