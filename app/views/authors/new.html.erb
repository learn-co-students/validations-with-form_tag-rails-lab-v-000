<h2>Create an Author</h2>
  <% if @author.errors.any? %>
    <div id="error_explanation">
      <h3>There were <% @author.errors.size %> errors: </h3>
      <ul>
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_tag authors_path, method: "post" do %>
  <div class="field<%= @author.errors[:name].any? ? " field_with_errors " : "" =%>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field<%= @author.errors[:email].any? ? " field_with_errors " : "" =%>">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field<%= @author.errors[:phone_number].any? ? " field_with_errors " : "" =%>">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
