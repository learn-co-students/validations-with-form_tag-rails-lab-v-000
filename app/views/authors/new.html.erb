<h2>Create an Author</h2>

<%= form_tag authors_path, method: "post" do %>

  <% if @author.errors.any? %>
    <div>
      <h4>Please correct the following errors:</h4>
      <ul id="error_explanation">
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="<%= @author.errors[:name].empty? ? 'field' : 'field_with_errors' %>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="<%= @author.errors[:email].empty? ? 'field' : 'field_with_errors' %>">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="<%= @author.errors[:phone_number].empty? ? 'field' : 'field_with_errors' %>">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
