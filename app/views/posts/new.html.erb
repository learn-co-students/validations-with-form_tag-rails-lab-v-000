<h2>Create new post</h2>
<%= form_tag posts_path, method: "post" do %>
  <div class="field">
  	<%= label_tag "title", "Title"%>
  	<%= text_field_tag "title", @post.title %>
  </div>

  <div class="field">
  	<%= label_tag "category", "Category" %>
  	<p>Make sure the category is Fiction or Non-fiction</p>
  	<%= text_field_tag "category", @post.category %>
  </div>

  <div class="field">
  	<%= label_tag "content", "Content" %>
  	<p>Must be more than 100 charactors</p>
  	<%= text_area_tag "content", @post.content %>
  </div>
  <%= submit_tag "Create" %>
<% end %>